= form_for @court do |f|
  - if @court.errors.any?
    #error_explanation
      %h2= "#{pluralize(@court.errors.count, "error")} prohibited this court from being saved:"
      %ul
        - @court.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :blob
    = f.text_area :blob
  .actions
    = f.submit 'Save'
